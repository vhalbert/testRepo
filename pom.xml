	<groupId>org.jboss.teiid.product</groupId>
	<artifactId>product-release</artifactId>
	<name>Teiid Product Release Handoff</name>
	<description>Builds the Product Release Handoff Doc for Teiid</description>
	<version>0.0.1-SNAPSHOT</version>
	
	
	
    <profiles>
        <profile>
            <id>teiid-project</id>
            <activation>
            	<activeByDefault>false</activeByDefault>
                    <property>
                        <name>project</name> 
                                <value>teiid</value>
                    </property>           	
	            </activation>   	
            	<build>
                    <plugins>
                        <plugin>
  							<groupId>org.codehaus.mojo</groupId>
 							 <artifactId>exec-maven-plugin</artifactId>
 							 <version>1.2.1</version> 
  							<executions>
								<execution>
									<phase>process-classes</phase> 
									<goals><goal>exec</goal></goals>   
									<configuration>
										<executable>${script.loc}/echoCommand.sh</executable>
								 		<arguments>
								 			<argument>"teiid:  mvn -s ./settings.xml clean install -Preleasewithjavadoc javadoc:aggregate-jar"</argument>
								  		</arguments>	
								  		<workingDirectory>${script.loc}</workingDirectory>								
									</configuration>
								</execution>	  							
								<execution>
									<id>build-teiid</id> 
									<phase>process-classes</phase> 
									<goals><goal>exec</goal></goals>   
  									<configuration>
  										<includePluginDependencies>true</includePluginDependencies>
										<executable>mvn</executable>
										 <arguments>
											<argument>-s</argument>
											<argument>${repo.loc}/teiid/settings.xml</argument>
											<argument>clean</argument>
											<argument>install</argument>
											<argument>-Preleasewithjavadoc</argument>
											<argument>javadoc:aggregate-jar</argument>
										  </arguments>
										  <workingDirectory>${repo.loc}/teiid</workingDirectory>
									</configuration>
								</execution>  														
							</executions>
                        </plugin>                      						


                    </plugins>
            </build>
  		</profile>    
